            function updateFloodFactors(basinId) {
                const basin = floodFactors[basinId];
                if (!basin) return;

                // Update current level
                document.getElementById('currentLevel').textContent = basin.currentLevel.toLocaleString();
                const levelPercentage = (basin.currentLevel / basin.dangerLevel) * 100;
                document.getElementById('levelBar').style.width = `${Math.min(levelPercentage, 100)}%`;

                // Update rainfall
                document.getElementById('rainfallLevel').textContent = basin.rainfall.current;
                const rainfallPercentage = (basin.rainfall.current / basin.rainfall.threshold) * 100;
                document.getElementById('rainfallBar').style.width = `${Math.min(rainfallPercentage, 100)}%`;

                // Update soil moisture
                document.getElementById('soilMoisture').textContent = basin.soilMoisture.current;
                const soilMoisturePercentage = (basin.soilMoisture.current / basin.soilMoisture.threshold) * 100;
                document.getElementById('soilMoistureBar').style.width = `${Math.min(soilMoisturePercentage, 100)}%`;

                // Update basin capacity
                document.getElementById('basinCapacity').textContent = basin.basinCapacity.current;
                const basinCapacityPercentage = (basin.basinCapacity.current / basin.basinCapacity.threshold) * 100;
                document.getElementById('basinCapacityBar').style.width = `${Math.min(basinCapacityPercentage, 100)}%`;

                // Update historical events
                const historicalEventsHtml = basin.historicalEvents.map(event => `
                    <div class="p-3 bg-white rounded-lg shadow-sm">
                        <div class="flex justify-between items-center">
                            <span class="font-semibold">${event.year}</span>
                            <span class="text-sm text-gray-600">${event.level.toLocaleString()} m³/s</span>
                        </div>
                        <p class="text-sm text-gray-600 mt-1">${event.impact}</p>
                    </div>
                `).join('');
                document.getElementById('historicalEvents').innerHTML = historicalEventsHtml;

                // Update basin characteristics
                const characteristicsHtml = basin.characteristics.map(char => `
                    <div class="p-3 bg-white rounded-lg shadow-sm">
                        <div class="flex justify-between items-center">
                            <span class="font-semibold">${char.name}</span>
                            <span class="text-sm text-gray-600">${char.value}</span>
                        </div>
                    </div>
                `).join('');
                document.getElementById('basinCharacteristics').innerHTML = characteristicsHtml;
            }

            // Call this function when a basin is selected
            function onBasinSelect(basinId) {
                updateFloodFactors(basinId);
            }

            function selectBasin(basinId) {
                // Update active state of buttons
                document.querySelectorAll('.basin-btn').forEach(btn => {
                    btn.classList.remove('bg-blue-100');
                    btn.classList.add('bg-blue-50');
                });
                event.currentTarget.classList.remove('bg-blue-50');
                event.currentTarget.classList.add('bg-blue-100');

                // Update flood factors
                updateFloodFactors(basinId);

                // Show the flood prediction factors section
                document.querySelector('.bg-white.rounded-lg.shadow-md.p-6.mb-8').scrollIntoView({ 
                    behavior: 'smooth',
                    block: 'start'
                });
            }
